<div class="container w-full h-96 bg-gray-200 flex">
    <div class="h-full w-1/12 hover:w-6/12 transition-all bg-lime-600">
       <%- include("layouts/menu.ejs")  %> 
    </div>
    <div class="h-full w-full p-2 bg-white text-center">
      <% if (message) { %>
         <p class="w-full "><%= message %> </p>
         <% } else { %>
             <h1 class="text-xl font-bold my-1">Upload Gallery</h1>
        <% } %>
        <!-- gallery viewport -->
      <div  class="flex flex-wrap justify-start w-full h-60 gallery_view overflow-hidden">
       <% user.gallery.forEach(element => { %>
         <div class="w-3/12 h-16 mx-1 my-2 border-2 border-black overflow-hidden">
            <img src="/gallery/<%= element %>" alt="">
         </div>`
       <% }) %>
         
      </div>
      <div class="w-full h-1 bg-black"></div>
     <form action="/gallery" method="post" class="flex flex-col items-center justify-center" enctype="multipart/form-data">
      <label for="gallPhoto">
          <img class="w-6 h-6 my-2 "  src="https://customercare.igloosoftware.com/.api2/api/v1/communities/10068556/previews/thumbnails/4fc20722-5368-e911-80d5-b82a72db46f2?width=680&height=680&crop=False"  alt="">
      </label>
          <input style="display: none;" type="file"  name="gallery"  id="gallPhoto" multiple>
          
          <button type="submit"  class="  w-full focus:outline-none px-3 py-2 hover:bg-white hover:text-amber-900 font-bold uppercase text-white my-2 bg-amber-500">Change</button>
      </form>
    </div>
   </div>