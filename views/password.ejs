<div class="container w-full h-96 bg-gray-200 flex">
    <div class="h-full w-1/12 hover:w-6/12 transition-all bg-amber-600">
       <%- include("layouts/menu.ejs")  %> 
    </div>
    <div class="h-full w-full">
        
        <form action="/password" method="post" class="w-full h-full  px-3 bg-white flex justify-center items-center">
            
            <div class="text-center">
                <% if (message) { %>
                    <p class="w-full  font-bold placeholder-amber-900 focus:outline-none px-3  "><%= message %> </p>
                    <% } else { %>
                        <h1 class="text-xl font-bold my-1">Change Password</h1>
                   <% } %>
            
            <input type="password" name="old_pass" class=" w-full border-2 focus:outline-none px-3 py-2 my-2 border-amber-500" placeholder="Old Password" id="">
            <input type="password" name="new_pass" class=" w-full border-2 focus:outline-none px-3 py-2 my-2 border-amber-500" placeholder="New Password" id="">
            <input type="password" name="confirm_pass" class=" w-full border-2 focus:outline-none px-3 py-2 my-2 border-amber-500" placeholder="Confirm Password" id="">
            <button type="submit" class=" w-full border-2 focus:outline-none px-3 py-2 hover:bg-white hover:text-amber-900 font-bold uppercase text-white my-2 bg-amber-500">Change</button>
        </div>
        </form>
    </div>
    </div>